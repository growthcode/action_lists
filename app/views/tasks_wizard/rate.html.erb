<%= render 'shared/plan_header' %>

<%= render partial: 'list_directions' %>

<div id="rate-tasks">

  <div class="content-wrapper">
    <div class="list-content">
      <div class="list-head">
        <h2 class="list-head-text">Actions</h2>
      </div>
      <div class="list-tasks">

        <ul class="" data-sort-url="<%= sort_positioned_plan_tasks_path(@plan.id) %>">

          <% @tasks.each do |task| %>
            <li class="task-row" id="tasks_<%= task.id %>" data-plan="<%= @plan.id %>">

                <div class="task-position">
                  <%= task.position %>
                </div>
                <div class="task">
                  <div class="task-details">
                    <%= task.deed %>
                  </div>
                </div>
                <div class="task-priority">
                  <div class="task-priority-details">
                    <%= select_tag("priority", options_for_select(["-", 1, 2, 3, 4, 5], task.priority || "-"), class: "form-control priority-select-tag", data: {url: update_rate_task_wizard_path(@plan.id, task.id)}) %>
                  </div>
                </div>

            </li>
          <% end %>

        </ul>

      </div>
    </div>
  </div>

</div>
