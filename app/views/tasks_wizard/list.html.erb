<%= render 'shared/plan_header' %>

<%= render partial: 'list_directions' %>

<div class="well">
  <%= form_for @task, url: create_task_wizard_path, html: {data: {plan_id: @plan.id}} do |f| -%>
    <div class="form-group">
      <label for="">New Task</label>
      <%= f.text_field :deed, class: 'form-control js-wizard-task-deed' %>
    </div>
    <%= f.submit 'Create Task', class: 'btn btn-success js-wizard-submit-task' %>
  <% end -%>
</div>

<div id="identified-tasks">
  <div class="content-wrapper">
    <div class="list-content">
      <div class="list-head">
        <h2 class="list-head-text">Actions</h2>
      </div>
      <div class="list-tasks">

        <ul class="" data-sort-url="<%= sort_positioned_plan_tasks_path(@plan.id) %>">

          <% @tasks.each do |task| %>
            <li class="task-row" id="tasks_<%= task.id %>" data-plan="<%= @plan.id %>">

              <div class="task-position">
                <%= task.position %>
              </div>
              <div class="task">
                <div class="task-details">
                  <%= task.deed %>
                </div>
              </div>
              <div class="task-priority">
                <div class="task-priority-details">
                  <%= task.priority %>
                </div>
              </div>

            </li>
          <% end %>

        </ul>

      </div>
    </div>
  </div>

</div>
