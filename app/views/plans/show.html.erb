<%= render 'plan_header' %>


<div class="plan-canvas">
  <div id="plan-board">

    <div class="inbox-wrapper">
      <div class="plan-list-content">
        <div class="plan-list-head">
          <h2 class="plan-list-head-text">Inbox</h2>
        </div>
        <%# binding.pry %>
        <%= render partial: 'task_list', locals: {tasks: @inbox, task_sort_route: sort_inbox_plan_tasks_path(@plan.id)} %>

        <a href="#" class="open-task-composer">Add an action...</a>

      </div>
    </div>

    <div class="position-wrapper">
      <div class="plan-list-content">
        <div class="plan-list-head">
          <h2 class="plan-list-head-text">Task Positioning</h2>
        </div>
        <%= render partial: 'task_list', locals: {tasks: @positioned, task_sort_route: sort_positioned_plan_tasks_path(@plan.id)} %>

      </div>
    </div>

  </div>
</div>

