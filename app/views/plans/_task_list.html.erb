<ul id="sortableInbox" class="connectedSortable" data-sort-url=<%= task_sort_route %>>
  <% tasks.each do |task| %>
    <li class="task-row" id="tasks_<%= task.id %>">
      <div class="task-position"><%= task.position %></div>
      <div class="task">
        <div class="task-details">
          <div class="task-details-title">
            <%= task.deed %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
