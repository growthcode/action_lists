<li class="task-row" id="tasks_<%= task.id %>" data-plan="<%= @plan.id %>">
  <div class="task-position">
    <div class="task-position-details">
      <%= task.position %>
    </div>
  </div>
  <div class="task">
    <div class="task-details">
      <div class="task-details-title">
        <%= task.deed %>
      </div>
    </div>
  </div>
  <div class="task-priority priority-level-<%= task.priority %>">
    <div class="task-priority-details">
      <%= task.priority %>
    </div>
  </div>
</li>
