<div class="modal" id="edit_task">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">
          <i class="fa fa-dot-circle-o action-icon"> </i><%= " #{@task.deed}" %>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        </h4>
      </div>
      <%= form_for @task, url: update_task_path(@task.plan.id, @task.id) do |f| %>
        <div class="modal-body">
          <div class="container-fluid">
            <%= render partial: 'tasks/form_modal', locals: {f: f} %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.button "Save changes", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
