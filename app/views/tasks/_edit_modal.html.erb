<div class="modal" id="edit_task">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= form_for @task, url: update_task_path(@task.plan.id, @task.id) do |f| %>
        <div class="modal-header">
          <div class="container-fluid">
            <h4 class="modal-title">
              <div class="row">
                <div class="col-xs-11">
                  <%= f.text_field :deed, class: "form-control"  %>
                </div>
                <div class="col-xs-1">
                  <i class="fa fa-dot-circle-o action-icon"> </i> 
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                </div>
              </div>
            </h4>
          </div>
            
        </div>
        <div class="modal-body">

          <div class="container-fluid">
              <%= render partial: 'tasks/form_modal', locals: {f: f} %>

            <div class="row">
              <div class="col-sm-12">
                <div class="form-group">
                  <label for="">Preparation TODO List: </label><br>
                  <% @task.needs.each do |need| %>
                    <div class="form-group">
                      <%= check_box_tag 'needs[complete][]', 1, need.complete %> <%= need.resource %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

          </div>
        </div>
      <% end %>
<!--       <div class="modal-footer">
      </div> -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
