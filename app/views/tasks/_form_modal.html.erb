<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.select :priority, options_for_select([1, 2, 3, 4, 5], @task.priority) %>
      <label for="">Priority Level</label>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-4">
    <i class="fa fa-clock-o"></i> Estimated Minutes <%= f.number_field :minutes, class: "form-control" %>
  </div>
  <div class="col-sm-4">
    <i class="fa fa-building"></i> Position Responsible <%= f.text_field :role, class: "form-control" %>
  </div>
  <div class="col-sm-4">
    <i class="fa fa-user"></i> Assigned To <%= f.text_field :person, class: "form-control" %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <label for="">Notes: </label><br>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.check_box :included %> Included?<br>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <label for="">Preparation TODO List: </label><br>
      <% @task.needs.each do |need| %>
        <div class="form-group">
          <%= check_box_tag 'needs[complete][]', 1, need.complete %> <%= need.resource %>
        </div>
      <% end %>
    </div>
  </div>
</div>
