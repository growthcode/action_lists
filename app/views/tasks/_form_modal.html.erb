<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.select :priority, options_for_select([1, 2, 3, 4, 5], @task.priority) %>
      <label for="">Priority Level</label>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-4">
    <i class="fa fa-clock-o"></i> Estimated Minutes <%= f.number_field :minutes, class: "form-control" %>
  </div>
  <div class="col-sm-4">
    <i class="fa fa-building"></i> Position Responsible <%#= f.text_field :role, class: "form-control" %>
  </div>
  <div class="col-sm-4">
    <i class="fa fa-user"></i> Assigned To <%#= f.text_field :person, class: "form-control" %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <label for="">Notes: </label><br>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
</div>

<br>
<div class="row">
  <div class="col-sm-12">

    <div class="form- pull-left">
      <%= f.check_box :included %> Included?<br>
    </div>

    <div class="form-group pull-right">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
      <%= link_to 'Destroy', destroy_task_path(@task.plan.id, @task.id), method: :delete, data: { confirm: "Are you sure you want to Delete this Task and all #{@task.needs.count} of it's Prep Needs?" }, class: "btn btn-danger" %>
    </div>

  </div>
</div>

<hr style="border-top: 1px solid #e5e5e5;">
<br>
